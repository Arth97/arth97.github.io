---
const { t } = Astro.props;
---

<section id="about" class="section">
	<div class="container">
		<h2 class="section-title">{t.about.title}</h2>
			<div class="about-text">
				<p class="about-intro">
					{t.about.p1}
				</p>
				<p>
					{t.about.p2}
				</p>
				<p>
					{t.about.p3}
				</p>
			</div>
	</div>
</section>

<style>
	.section {
		background: var(--color-background);
	}

	.about-text {
		font-size: 1.125rem;
		line-height: 1.8;
		color: var(--color-text);
	}

	.about-intro {
		font-size: 1.25rem;
		font-weight: 500;
		color: var(--color-primary);
		margin-bottom: 1.5rem;
	}

	.about-text p {
		margin-bottom: 1.5rem;
	}

	.about-stats {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 2rem;
	}

	.stat-item {
		text-align: center;
		padding: 1.5rem;
		background: var(--color-surface);
		border-radius: 1rem;
		transition: all 0.3s ease;
	}

	.stat-item:hover {
		transform: translateY(-5px);
		box-shadow: var(--shadow-md);
	}

	.stat-number {
		font-size: 2.5rem;
		font-weight: 700;
		color: var(--color-secondary);
		margin-bottom: 0.5rem;
	}

	.stat-label {
		font-size: 0.875rem;
		color: var(--color-text-light);
		font-weight: 500;
	}

	@media (max-width: 768px) {
		.about-text {
			font-size: 1rem;
		}

		.about-intro {
			font-size: 1.125rem;
		}

		.about-stats {
			grid-template-columns: 1fr;
			gap: 1rem;
		}

		.stat-number {
			font-size: 2rem;
		}
	}
</style>