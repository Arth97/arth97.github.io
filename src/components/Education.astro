---
const { t } = Astro.props;
---

<section id="experience" class="section">
	<div class="container">
		<h2 class="section-title">{t.education.title}</h2>
		<div class="education-section">
			<div class="education-items">
				<div class="education-item">
					<div class="education-content">
						<h3>{t.education.degree}</h3>
						<div class="education-specialization">{t.education.specialization}</div>
						<div class="education-school">{t.education.school}</div>
						<div class="education-date">2017 - 2023</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.section {
		background: var(--color-surface);
	}

	.education-section {
		background: white;
		padding: 2rem;
		border-radius: 1rem;
		box-shadow: var(--shadow-md);
		height: fit-content;
	}

	.education-title {
		font-size: 1.5rem;
		font-weight: 600;
		color: var(--color-primary);
		margin-bottom: 1.5rem;
	}

	.education-items {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.education-item {
		padding: 1rem;
		background: var(--color-surface);
		border-radius: 0.5rem;
		transition: all 0.3s ease;
	}

	.education-item:hover {
		background: var(--color-secondary);
		color: white;
	}

	.education-item:hover .education-specialization,
	.education-item:hover .education-school,
	.education-item:hover .education-date {
		color: rgba(255, 255, 255, 0.8);
	}

	.education-content > h3 {
		margin: 0 0 0.5rem 0;
		font-weight: 600;
	}

	.education-specialization {
		font-size: 1rem;
		color: var(--color-text-light);
		margin-bottom: 0.25rem;
	}

	.education-school {
		font-size: 0.875rem;
		color: var(--color-text-light);
		margin-bottom: 0.25rem;
	}

	.education-date {
		font-size: 0.75rem;
		color: var(--color-text-light);
	}

	@media (max-width: 768px) {
		.education-section {
			padding: 1.5rem;
		}
	}
</style>