<style>
	.section {
		background: var(--color-background);
	}

	.experience-timeline {
		position: relative;
	}

	.experience-timeline::before {
		content: '';
		position: absolute;
		left: 1rem;
		top: 0;
		bottom: 0;
		width: 2px;
		background: var(--color-border);
	}

	.timeline-item {
		position: relative;
		padding-left: 3rem;
		padding-bottom: 2rem;
	}

	.timeline-marker {
		position: absolute;
		left: 0.5rem;
		top: 0.5rem;
		width: 1rem;
		height: 1rem;
		background: var(--color-secondary);
		border-radius: 50%;
		border: 3px solid var(--color-background);
		z-index: 1;
	}

	.timeline-content {
		background: white;
		padding: 2rem;
		border-radius: 1rem;
		box-shadow: var(--shadow-md);
		transition: all 0.3s ease;
	}

	.timeline-content:hover {
		box-shadow: var(--shadow-lg);
		transform: translateX(10px);
	}

	.timeline-title {
		font-size: 1.25rem;
		font-weight: 600;
		color: var(--color-primary);
		margin-bottom: 0.5rem;
	}

	.timeline-company {
		font-weight: 500;
		color: var(--color-secondary);
		margin-bottom: 0.25rem;
	}

	.timeline-date {
		font-size: 0.875rem;
		color: var(--color-text-light);
		margin-bottom: 1rem;
	}

	.timeline-description {
		margin-top: 0.5rem;
		margin-bottom: 0.5rem;
		line-height: 1.6;
	}

	.timeline-skills {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin-top: 1rem;
	}

	.skill-tag {
		background: var(--color-surface);
		color: var(--color-text);
		padding: 0.50rem 0.75rem;
		border-radius: 1rem;
		font-size: 0.875rem;
		font-weight: 500;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}

	.skill-tag-icon {
		width: 56px;
		height: 56px;
	}

	@media (max-width: 768px) {
		.experience-content {
			grid-template-columns: 1fr;
			gap: 2rem;
		}
		
		.timeline-item {
			padding-left: 2rem;
		}
		
		.timeline-content {
			padding: 1.5rem;
		}
		
		.timeline-content:hover {
			transform: none;
		}

		.timeline-item {		
			padding-left: 1.75rem;
		}

		.experience-timeline::before {
			left: 0.5rem;
		}

		.timeline-marker {
			left: 0rem;	
		}
	}
	@media (max-width: 576px) {
		.skill-tag-icon {
			width: 25px;
			height: 25px;
		}
	}
</style>